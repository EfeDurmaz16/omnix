{
  "name": "OmniX - AI Platform",
  "short_name": "OmniX",
  "description": "Advanced multi-model AI platform with RAG capabilities and autonomous agents",
  "theme_color": "#2563eb",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/",
  "start_url": "/",
  "categories": ["productivity", "business", "education"],
  "lang": "en-US",
  "icons": [
    {
      "src": "/aspendos-icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "/aspendos-icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "Chat",
      "description": "Start a new AI conversation",
      "url": "/dashboard?new=true",
      "icons": [
        {
          "src": "/aspendos-icon.svg",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Agents",
      "short_name": "Agents",
      "description": "Manage your AI agents",
      "url": "/agents",
      "icons": [
        {
          "src": "/aspendos-icon.svg",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Models",
      "short_name": "Models",
      "description": "Browse available AI models",
      "url": "/models",
      "icons": [
        {
          "src": "/aspendos-icon.svg",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-chat.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Chat interface on desktop"
    },
    {
      "src": "/screenshots/mobile-chat.png", 
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Chat interface on mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["text/*", "image/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ]
} 